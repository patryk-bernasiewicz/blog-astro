---
import { ClientRouter } from "astro:transitions";

import BaseHead from "@components/layout/blog/BaseHead.astro";
import Header from "@components/layout/blog/Header.astro";
import Footer from "@components/layout/blog/Footer.astro";

type Props = {
  title: string;
  description?: string;
  pubDate?: Date;
};

const { title, description } = Astro.props;
---

<html lang="pl">
  <head>
    <BaseHead title={`PatrykB.pl | ${title}`} description={description || ""} />
    <ClientRouter />
  </head>
  <body
    class="flex flex-col text-brandGray-800 bg-brandGray-100 dark:bg-brandGray-800 dark:text-brandGray-50"
  >
    <Header />
    <main class="pt-12 flex-grow flex flex-col [&>*]:flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
