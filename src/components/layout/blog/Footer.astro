---
import { getTranslationsByLanguage } from "@i18n/utils";
import { getLanguageFromUrl } from "@lib/getLanguageFromUrl";
import { cn } from "@lib/tailwind";

const userLanguage = getLanguageFromUrl(Astro.url);
const translations = getTranslationsByLanguage(userLanguage);
---

<footer class="relative bg-brandGray-100 dark:bg-brandGray-900 group pb-2">
  <div class={cn(
    "container flex flex-col items-center md:flex-row md:justify-between py-4 gap-2",
    "opacity-75 group-hover:opacity-100 group-focus-within:opacity-100"
  )}>
    <a
      href="https://astro.build/"
      target="_blank"
      rel="noreferrer noopener"
      class="flex justify-center md:justify-start items-center text-sm gap-1"
    >
      <span>{translations.footer.BUILT_WITH}</span>
      <img
        alt="Astro logo"
        width="80"
        height="27"
        class="w-20 -mb-[0.25em] hidden dark:inline"
        src="/astro-logo-light-gradient.svg"
      />
      <img
        alt="Astro logo"
        width="80"
        height="27"
        class="w-20 -mb-[0.25em] inline dark:hidden"
        src="/astro-logo-dark.svg"
      />
    </a>
    <a
    href="https://github.com/patryk-bernasiewicz/blog-astro"
      target="_blank"
      rel="noreferrer noopener"
      class={cn(
        "flex items-center text-sm gap-1",
      )}
    >
      <span>{translations.footer.SOURCE_CODE}</span>
      <img
        alt="Github logo"
        width="16"
        height="16"
        class="w-4 dark:invert -mt-[0.25em]"
        src="/github-icon.svg"
      />
    </a>
  </div>
</footer>
