---
import { Icon } from "astro-icon/components";

interface Props {
  date: Date;
  startIcon?: string;
}

const { date, startIcon } = Astro.props;
---

{startIcon && <Icon name={startIcon} />}
<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
