---
import type { InferGetStaticPropsType, GetStaticPaths } from "astro";

import { getPaginatedBlogPosts } from "@lib/pagesStaticPathsGenerators";
import BlogEntries from "@components/pages/blog/entries-list/BlogEntries.astro";
import { Language } from "@types";

export const getStaticPaths = (async ({ paginate }) => {
  return await getPaginatedBlogPosts(paginate, Language.pl);
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { page } = Astro.props as Props;
---

<BlogEntries page={page} />
