---
import type { InferGetStaticPropsType } from "astro";

import Layout from "@layouts/BlogLayout.astro";
import BlogSingleEntry from "@components/pages/BlogSingleEntry.astro";
import { getSingleBlogEntryStaticPaths } from "@lib/pagesStaticPathsGenerators";
import { Language } from "@types";

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

export const getStaticPaths = getSingleBlogEntryStaticPaths(Language.pl);

const { title, body } = Astro.props;
---

<Layout>
  <BlogSingleEntry title={title} body={body} />
</Layout>
